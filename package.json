  "homepage": "https://github.com/andrei0x309/supabase-backup-actionr#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andrei0x309/supabase-backup-action.git"
  },
  "bugs": "https://github.com/andrei0x309/supabase-backup-action/issues",
  "author": "Andrei O (andrei0x309)",
  "devDependencies": {
    "@types/archiver": "^6.0.3",
    "@types/bun": "1.2.5",
    "oxc-transform": "^0.61.2"
  },
  "peerDependencies": {
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.49.4",
    "archiver": "^7.0.1"
