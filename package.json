{
  "name": "supabase-backup-action",
  "version": "1.1.6",
  "description": "A GitHub Action to backup Supabase database to supa storage, it can also delete old backups.",
  "type": "module",
  "scripts": {
    "degit": "bun run ./lib-tools/cli/degit.ts",
    "generate-license": "bun run ./lib-tools/cli/generate-license.ts",
    "dev": "bun run ./lib-tools/scripts/dev.ts",
    "new-version": "bun run ./lib-tools/scripts/release-script.ts",
    "release": "bun run new-version"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "bun",
    "bun github action",
    "supabase backup",
    "supabase backup to storage",
    "backup storage supabase",
    "bun backup database"
  ],
